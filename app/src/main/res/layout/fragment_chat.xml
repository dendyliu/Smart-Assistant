<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.kdadev.smartassistant.ChatFragment">

    <LinearLayout
        android:id="@+id/layout_enter_room"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:src="@drawable/ic_speaker_group_dark"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/image_enter_room" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Enter Chat Room"
            android:id="@+id/text_enter_room"/>

    </LinearLayout>
</FrameLayout>
